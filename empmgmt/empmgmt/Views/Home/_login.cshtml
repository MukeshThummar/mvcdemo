<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
@model empmgmt.Models.LoginViewModel
@{
}
<div class="container login-container">
    <div class="row">
        
        <div class="col-md-6 offset-md-3 login-form">
            <span style="color:red">@ViewBag.error</span>
            <form asp-action="Index" method="post">
                @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                <div class="form-group">
                    <input type="text" asp-for="UserName" class="form-control" placeholder="Login User Name" value="" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="password" asp-for="Password" class="form-control" placeholder="Login Password" value="" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                <div class=" form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <img id="img-captcha" src="~/get-captcha-image" />
                        </div>
                        <div class="col-md-6">
                            <input type="text" class="form-control" placeholder="Captcha Code" asp-for="CaptchaCode" maxlength="4" />
                        </div>
                    </div>
                    <span asp-validation-for="CaptchaCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" class="btnlogin" value="Login" />
                </div>
            </form>
        </div>
    </div>
</div>
